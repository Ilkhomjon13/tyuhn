<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".SignUpOq">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/tyl"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<TextView
				android:id="@+id/textview1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="XUSH KELIBSIZ!"
				android:textSize="40sp"
				android:textStyle="bold"
				android:textColor="#FFFFFF"/>
			<TextView
				android:id="@+id/textview2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Xurmatli ota onalar siz o'z bolangiz baxolari va uning o'zlashtirish jarayonini to'g'ridan to'gri ko'zatish imkonyati bor. Buning uchun maxsus login hamda parolingizni kirtishingiz kerak."
				android:textSize="12sp"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear7"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear8"
				android:layout_width="100dp"
				android:layout_height="5dp"
				android:layout_margin="20dp"
				android:padding="8dp"
				android:background="#FFFFFF"
				android:orientation="horizontal"/>
			<TextView
				android:id="@+id/textview8"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="LOGIN"
				android:textSize="16sp"
				android:textColor="#FFFFFF"
				android:layout_gravity="left"/>
			<EditText
				android:id="@+id/username"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:hint="Loginni kiriting"
				android:textSize="16sp"
				android:textColor="@color/black"
				android:imeOptions="actionNext"/>
			<TextView
				android:id="@+id/textview6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="PAROL"
				android:textSize="16sp"
				android:textColor="#FFFFFF"
				android:layout_gravity="left"/>
			<EditText
				android:id="@+id/password"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:padding="8dp"
				android:hint="Parolni kiriting"
				android:textSize="16sp"
				android:textColor="@color/black"
				android:imeOptions="actionGo"/>
			<Button
				android:id="@+id/ButtonSgnOqtuvchi"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="20dp"
				android:padding="8dp"
				android:background="#1976D2"
				android:text="TASTIQLASH"
				android:textSize="12sp"
				android:textStyle="bold"
				android:textColor="#FFFFFF"
				android:layout_gravity="center_horizontal"/>
			<TextView
				android:id="@+id/textview9"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Agar Login kiritilsa lekin ishlamasa info bo'limi orqali birga murojat qiling."
				android:textSize="12sp"
				android:textColor="#FFFFFF"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
